{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "src/main.ts",
    "src/preload.ts",
    "src/database/**/*",
    "src/interfaces/**/*",
  ],
  "exclude": ["node_modules"]
}
