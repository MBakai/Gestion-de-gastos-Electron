{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "ES2020"
    ]
  },
  "include": [
    "src/render/**/*",
    "src/interfaces/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}